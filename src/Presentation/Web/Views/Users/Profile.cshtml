@model UserProfileViewModel

@{
    ViewBag.Title = "User profile";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="card mb-12">
            <div class="card-body text-center">
                <h3>User details</h3>
                <form method="post" asp-controller="Users" asp-action="ChangeDetails">
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="UserName"></label>
                        <input type="text" asp-for="UserName" class="form-control" required="required">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" autocomplete="new-password" type="text" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" autocomplete="new-password" type="text" aria-required="true" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" autocomplete="new-password" type="text" aria-required="true" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <input type="submit" value="Change profile" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-12">
            <div class="card-body text-center">
                <h3>Change password</h3>
                <form method="post" asp-action="ChangePassword" asp-controller="Users">
                    <input type="hidden" asp-for="UserName"/>
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="OldPassword"></label>
                        <input type="password" asp-for="OldPassword" class="form-control" required="required">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" autocomplete="new-password" type="password" aria-required="true" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label" asp-for="ConfirmNewPassword"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" autocomplete="new-password" type="password" aria-required="true" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <input type="submit" value="Change password" class="btn btn-secondary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


