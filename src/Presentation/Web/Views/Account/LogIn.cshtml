@using Web.Models.Authorization;
@model LogInUserInputModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-form-label" asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" class="form-control" required="required">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-form-label" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" type="password" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="col-form-label" asp-for="RememberMe"></label>
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="register" asp-controller="Account" asp-action="Register">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-controller="Account" asp-action="ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
