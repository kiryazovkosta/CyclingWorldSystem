@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (Context?.User?.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            @if(@Context.User.FindFirst(c => c.Type == "avatar") is not null) 
            {
                var avatar = @Context?.User.FindFirst(c => c.Type == "avatar").Value;
                <img src="@avatar" title="title" alt="additional title" height="42px" />
            }
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Profile">
                Hello, @Context.User.FindFirst(c => c.Type == "fullname").Value
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
