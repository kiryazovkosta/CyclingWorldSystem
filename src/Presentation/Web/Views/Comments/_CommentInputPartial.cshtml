@model CommentInputModel

<form method="post">
    <input type="hidden" asp-for="@Model.ActivityId" />

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" rows="10" class="form-control" placeholder="Write your comment..."></textarea>
        <span asp-validation-for="Content" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            @(string.IsNullOrEmpty(Model.Id) ? "Create" : "Update")
        </button>
    </div>
</form>