@using Common.Enumerations
@model  ActivityInputModel

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Create" enctype="multipart/form-data" method="post" asp-controller="Activities">

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
            
            <input asp-for="UserId" type="hidden" />
            <input asp-for="GpxId" type="hidden" name="GpxId" value="" />
            <input asp-for="PicturesList" type="hidden" name="PicturesList" value="" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Name...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrivateNotes"></label>
                <textarea asp-for="PrivateNotes" class="form-control" placeholder="Private notes..."></textarea>
                <span asp-validation-for="PrivateNotes" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Distance"></label>
                        <input asp-for="Distance" class="form-control" placeholder="Distance of the track..." readonly>
                        <span asp-validation-for="Distance" class="small text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Duration"></label>
                        <input asp-for="Duration" class="form-control" placeholder="Duration of the track...." readonly>
                        <span asp-validation-for="Duration" class="small text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="PositiveElevation"></label>
                        <input asp-for="PositiveElevation" class="form-control" readonly>
                        <span asp-validation-for="PositiveElevation" class="small text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="NegativeElevation"></label>
                        <input asp-for="NegativeElevation" class="form-control" readonly>
                        <span asp-validation-for="NegativeElevation" class="small text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="StartDateTime"></label>
                @* <input asp-for="StartDateTime" type="date" class="form-control"> *@
                <input asp-for="StartDateTime" type="datetime-local" class="form-control">
                <span asp-validation-for="StartDateTime" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <label for="GpxFile" class="form-label">Please choose gpx file</label>
                        <input class="form-control" type="file" id="GpxFile" name="GpxFile">
                    </div>
                    <div class="col-1">
                        <input class="btn btn-secondary mt-3" value="Process" id="load-gpx-file" />
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <label for="Pictures" class="form-label">Please choose pictures</label>
                        <input class="form-control" type="file" id="Pictures" name="Pictures" multiple>
                    </div>
                    <div class="col-1">
                        <input class="btn btn-secondary mt-3" value="Upload" id="upload-pictures" />
                    </div>
                </div>
                <div class="row" id="activity-pictures">
                </div>
            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="VisibilityLevel"></label>
                        <select asp-for="VisibilityLevel" class="form-select">
                            @foreach (VisibilityLevelType visibility in Enum.GetValues(typeof(VisibilityLevelType)))
                            {
                                <option value="@visibility">@visibility</option>
                            }
                        </select>
                        <span asp-validation-for="VisibilityLevel" class="small text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="BikeId"></label>
                        <select asp-for="BikeId" class="form-select">
                            @foreach (var bike in Model.Bikes)
                            {
                                <option value="@bike.Id">@bike.Name</option>
                            }
                        </select>
                        <span asp-validation-for="BikeId" class="small text-danger"></span>
                    </div>
                </div>
                
            </div>
            
        </form>
    </div>
</div>

