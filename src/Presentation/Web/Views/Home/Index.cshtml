@model ResultMessageModel?

@{
    ViewData["Title"] = "Home Page";
}

@if(@Model is not null) 
{
    if (!string.IsNullOrEmpty(@Model.Success))
    {
        <div id="alert" class="alert alert-success">
            <p>@Model.Success</p>
        </div>
    }
    if (!string.IsNullOrEmpty(@Model.Error))
    {
        <div id="alert" class="alert alert-danger">
            <p>@Model.Error</p>
        </div>
    }
}

<div class="text-center">
    <h1>Cycling World System</h1>
    <h5>and cycling for all</h5>
</div>

<div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/cycling.jpg" class="d-block w-100" alt="cycling">
            <div class="carousel-caption d-none d-md-block">
                <h5>Create your activity</h5>
                <p>Create your activity from Gpx file. Add pictures and share it.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/city.jpg" class="d-block w-100" alt="city">
            <div class="carousel-caption d-none d-md-block">
                <h5>Create your bike</h5>
                <p>Create your bike and use it when create activity</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/xco.jpg" class="d-block w-100" alt="xco">
            <div class="carousel-caption d-none d-md-block">
                <h5>Look other activities</h5>
                <p>View other activities. Like or dislike it. Write comment otr just be inspired</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="text-center">
    <h3>ASP.NET Advanced - June 2023</h3>
</div>

@section Scripts{
    <script>
        $('#carouselExampleCaptions').carousel({
            interval: 1000,
            cycle: true
        });
    </script>
}


