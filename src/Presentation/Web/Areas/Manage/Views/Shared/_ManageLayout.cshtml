<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CyclingWorldSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <script src="https://kit.fontawesome.com/9478cd08f5.js" crossorigin="anonymous"></script>
</head>
<body>
<header>
    <h1 class="manage-header">Administration Panel</h1>
    <h3 class="manage-header">This is an area for manage users, roles and system nomenclatures</h3>
    <div class="text-center">
        <a class="btn btn-info manage-header" asp-area="" asp-controller="Home" 
           asp-action="Index">Go back to area for users</a>
        <a class="btn btn-info manage-header" asp-area="Manage" asp-controller="Management" 
           asp-action="Index">Go back to management root</a>
        <a class="btn btn-info manage-header" asp-area="" asp-controller="Account" 
           asp-action="Logout">Log off</a>
    </div>
    
    <hr/>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - Cycling World System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await Component.InvokeAsync("Notyf");
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>