@model PagedUsersDataViewModel

<div class="paging-toolbar">
    <p>
        <a asp-action="All" asp-controller="Users" asp-area="Manage" asp-route-pageNumber="1" asp-route-pageSize="10" class="btn btn-primary">First</a>
        @if (Model.HasPrevious)
        {
            <a asp-action="All" asp-controller="Users" asp-area="Manage" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-pageSize="10" class="btn btn-primary">Prev</a>
        }
        else
        {
            <a asp-action="All" asp-controller="Users" asp-area="Manage" class="btn btn-primary disabled">Prev</a>
        }
        <a asp-action="All" asp-controller="Users" asp-area="Manage" class="btn btn-info disabled">Current</a>
        @if (Model.HasNext)
        {
            <a asp-action="All" asp-controller="Users" asp-area="Manage" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-pageSize="10"  class="btn btn-info">Next</a>
        }
        else
        {
            <a asp-action="All" asp-controller="Users" asp-area="Manage" class="btn btn-info disabled">Next</a>
        }
        
        <a asp-action="All" asp-controller="Users" asp-area="Manage" asp-route-pageNumber="@Model.TotalPages" asp-route-pageSize="10" asp- class="btn btn-danger">Last</a>
        You are on page @Model.CurrentPage with @Model.PageSize users from @Model.TotalItemsCount records.
        Total page number is @Model.TotalPages
    </p>
</div>