@using Web.Models.Authorization;

@model RegisterUserInputModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="col-lg-6">
    <form id="registerForm" enctype="multipart/form-data" method="post">
        <h2>Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label class="col-form-label" asp-for="FirstName"></label>
            <input type="text" asp-for="FirstName" class="form-control" required="required">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="MiddleName"></label>
            <input type="text" asp-for="MiddleName" class="form-control" >
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="LastName"></label>
            <input type="text" asp-for="LastName" class="form-control" required="required">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control" required="required">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="UserName"></label>
            <input type="text" asp-for="UserName" class="form-control" required="required">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="Password"></label>
            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" 
                type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" 
                type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-form-label" asp-for="Avatar">Please choose image for the avatar</label>
            <input class="form-control" type="file" asp-for="Avatar" name="Avatar">
            <span asp-validation-for="Avatar" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group row">
            <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>